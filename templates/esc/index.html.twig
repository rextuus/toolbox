{% extends 'esc/esc_base.html.twig' %}

{% block title %}ESC Vote{% endblock %}

{% block body %}
    <div class="container" id="container">
        <div id="targets" class="targets visible">
            {% for field in fields %}
                <div class="target-container">
                    <div class="target-name">{{ field }}</div>
                    <div id="target-{{ loop.index }}" class="target"></div>
                </div>
            {% endfor %}
        </div>
        <div id="pool" class="pool hidden" id="pool">
            {% for choice in choices %}
                <div id="choice-{{ loop.index }}" class="choice">{{ choice }}</div>
            {% endfor %}
        </div>
        <input type="text" id="name" class="name" placeholder="Name">
        <div id="approval" class="approval">
            Abschicken
        </div>

        <div id="errorModal" class="modal">
            <div class="modal-content">
                <span class="modal-close">&times;</span>
                <p id="errorMessage">Error Message</p>
            </div>
        </div>
    </div>

{% endblock %}
