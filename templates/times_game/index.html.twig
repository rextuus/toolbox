    <div class="container">

        <div id="invalidWordModal" class="modal">
            <div class="modal-content modal-invalid-word">
                <img src="https://res.cloudinary.com/dl4y4cfvs/image/upload/v1720548515/michuworlde/kitchen_mitch_afiqzy.png" alt="Kitchen Mitch">
                <div>Don't cook a spoiled mash of words</div>
            </div>
        </div>

        <div id="failedModal" class="modal">
            <div class="modal-content modal-failed">
                <img src="https://res.cloudinary.com/dl4y4cfvs/image/upload/v1720542124/michuworlde/failed2_gndszj.gif"
                     alt="Michi A.">
                <div class="correct">Michi A. had hidden this word for you in his barrel today: <span id="searched-wordle">Fake</span></div>
                <div class="correct">Try again tomorrow</div>
            </div>
        </div>

        <div id="successModal" class="modal">
            <div class="modal-content">
                Won
            </div>
        </div>

        <div class="wrapper">
            <div class="center-container">
                <div class="grid-container">
                    {% for row in 1..totalAttempts %}
                        <div id="line-{{ row }}" class="grid-line">
                            {% for cell in 1..5 %}
                                <div id="cell-{{ row }}-{{ cell }}" class="grid-cell" data-state="empty"></div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


